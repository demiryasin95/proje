@section scripts {
    <script>
        let users = [];
        let userToDelete = null;

        $(document).ready(function () {
            loadUsers();

            $('#confirmDeleteBtn').on('click', function () {
                if (userToDelete) {
                    deleteUser(userToDelete);
                }
            });

            // Search functionality
            $('#searchInput').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                filterAndDisplayUsers(searchTerm);
            });
        });

        function loadUsers() {
            $.get('/Admin/GetUsers', function (data) {
                if (data.success) {
                    users = data.users;
                    displayUsers(users);
                    updateStats(users);
                } else {
                    showToast('danger', data.message || 'Kullanıcılar yüklenemedi');
                }
            }).fail(function () {
                showToast('danger', 'Kullanıcılar yüklenirken hata oluştu');
            });
        }

        function filterAndDisplayUsers(searchTerm) {
            if (!searchTerm) {
                displayUsers(users);
                return;
            }

            const filtered = users.filter(u => 
                u.userName.toLowerCase().includes(searchTerm) ||
                (u.email && u.email.toLowerCase().includes(searchTerm)) ||
                u.roles.some(r => r.toLowerCase().includes(searchTerm))
            );
            displayUsers(filtered);
        }

        function displayUsers(usersToDisplay) {
            const tbody = $('#usersTableBody');
            tbody.empty();

            $('#tableInfo').text(usersToDisplay.length + ' kayıt bulundu');
            
            if (usersToDisplay.length === 0) {
                tbody.html(`
                    <tr>
                        <td colspan="7" class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted mt-3 mb-0">Kullanıcı bulunamadı</p>
                        </td>
                    </tr>
                `);
                return;
            }

            usersToDisplay.forEach(function (user, index) {
                const roleColors = { 'Admin': 'primary', 'Teacher': 'warning', 'Student': 'success' };
                const roles = user.roles.map(r => {
                    const color = roleColors[r] || 'secondary';
                    return `<span class="badge bg-${color} rounded-pill">${escapeHtml(r)}</span>`;
                }).join(' ');

                const linkedTo = user.linkedTo
                    ? `<span class="badge bg-soft-success text-success">${escapeHtml(user.linkedTo)}</span>`
                    : '<span class="text-muted">-</span>';

                const statusBadge = user.locked
                    ? '<span class="badge bg-danger rounded-pill"><i class="fas fa-lock me-1"></i>Kilitli</span>'
                    : '<span class="badge bg-success rounded-pill"><i class="fas fa-check me-1"></i>Aktif</span>';

                const emailDisplay = user.email
                    ? `<span class="text-secondary">
                         <i class="fas fa-envelope me-1 text-muted small"></i>${escapeHtml(user.email)}
                         ${user.emailConfirmed ? '<i class="fas fa-check-circle text-success ms-1" title="Onaylı"></i>' : ''}
                       </span>`
                    : '<span class="text-muted">-</span>';

                const canDelete = !user.linkedTo;
                
                const editBtn = `<button class="btn btn-sm btn-primary rounded-3 me-1" onclick="editUser('${user.id}')" title="Düzenle">
                       <i class="fas fa-edit"></i>
                   </button>`;
                
                const deleteBtn = canDelete
                    ? `<button class="btn btn-sm btn-danger rounded-3" onclick="confirmDelete('${user.id}', '${escapeHtml(user.userName)}')" title="Sil">
                           <i class="fas fa-trash"></i>
                       </button>`
                    : `<button class="btn btn-sm btn-secondary rounded-3" disabled title="Bağlı kullanıcı silinemez">
                           <i class="fas fa-trash"></i>
                       </button>`;

                const avatarUrl = user.profilePictureUrl
                    ? user.profilePictureUrl
                    : `https://ui-avatars.com/api/?name=${encodeURIComponent((user.displayName || user.userName).charAt(0))}&background=4f46e5&color=fff&size=40&bold=true`;
                
                const row = `
                    <tr>
                        <td class="text-center">
                            <img src="${avatarUrl}" class="rounded-circle shadow-sm" width="40" height="40" style="object-fit: cover;">
                        </td>
                        <td>
                            <span class="fw-bold text-dark">${escapeHtml(user.displayName || user.userName)}</span>
                        </td>
                        <td>${emailDisplay}</td>
                        <td>${roles}</td>
                        <td>${linkedTo}</td>
                        <td>${statusBadge}</td>
                        <td class="text-end">${editBtn}${deleteBtn}</td>
                    </tr>
                `;

                tbody.append(row);
            });
        }

        function updateStats(users) {
            $('#totalUsers').text(users.length);
            
            const adminCount = users.filter(u => u.roles.includes('Admin')).length;
            const studentCount = users.filter(u => u.roles.includes('Student')).length;
            const teacherCount = users.filter(u => u.roles.includes('Teacher')).length;

            $('#adminCount').text(adminCount);
            $('#studentCount').text(studentCount);
            $('#teacherCount').text(teacherCount);
        }

        function confirmDelete(userId, userName) {
            userToDelete = userId;
            $('#deleteUserName').text(userName);
            $('#deleteModal').modal('show');
        }

        function deleteUser(userId) {
            $.ajax({
                url: '/Admin/DeleteUser',
                type: 'POST',
                headers: {
                    'X-CSRF-TOKEN': $('input[name="__RequestVerificationToken"]').val()
                },
                data: { userId: userId },
                success: function (response) {
                    $('#deleteModal').modal('hide');
                    if (response.success) {
                        showToast('success', response.message);
                        loadUsers();
                    } else {
                        showToast('danger', response.message);
                    }
                    userToDelete = null;
                },
                error: function () {
                    $('#deleteModal').modal('hide');
                    showToast('danger', 'Kullanıcı silinirken bir hata oluştu');
                    userToDelete = null;
                }
            });
        }

        // Store selected profile picture
        let selectedProfilePicture = null;
        
        function editUser(userId) {
            const user = users.find(u => u.id === userId);
            if (!user) return;
            
            $('#editUserId').val(user.id);
            $('#editUserNameDisplay').text(user.displayName || user.userName);
            $('#editUserDisplayName').val(user.displayName || '');
            $('#editUserEmail').val(user.email || '');
            $('#editUserPassword').val('');
            $('#editUserLocked').prop('checked', user.locked);
            
            // Avatar
            const avatarUrl = user.profilePictureUrl
                ? user.profilePictureUrl
                : `https://ui-avatars.com/api/?name=${encodeURIComponent((user.displayName || user.userName).charAt(0))}&background=4f46e5&color=fff&size=100&bold=true`;
            $('#editUserAvatar').attr('src', avatarUrl);
            
            // Reset file input
            $('#editUserProfilePicture').val('');
            selectedProfilePicture = null;
            
            // Roles
            $('#roleAdmin').prop('checked', user.roles.includes('Admin'));
            $('#roleTeacher').prop('checked', user.roles.includes('Teacher'));
            $('#roleStudent').prop('checked', user.roles.includes('Student'));
            
            $('#editUserModal').modal('show');
        }
        
        // Profile picture preview
        $('#editUserProfilePicture').on('change', function(e){
            const file = this.files[0];
            if(file){
                if(file.size > 5 * 1024 * 1024){
                    showToast('danger', 'Dosya boyutu maksimum 5MB olabilir');
                    this.value = '';
                    selectedProfilePicture = null;
                    return;
                }
                
                const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
                if(!allowedTypes.includes(file.type)){
                    showToast('danger', 'Sadece JPG, PNG, GIF ve WEBP formatları kabul edilir');
                    this.value = '';
                    selectedProfilePicture = null;
                    return;
                }
                
                selectedProfilePicture = file;
                const reader = new FileReader();
                reader.onload = function(e){
                    $('#editUserAvatar').attr('src', e.target.result);
                };
                reader.readAsDataURL(file);
            }
        });
        
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            input.type = input.type === 'password' ? 'text' : 'password';
        }
        
        $('#saveUserBtn').on('click', function() {
            const btn = $(this);
            btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Kaydediliyor...');
            
            const roles = [];
            if ($('#roleAdmin').is(':checked')) roles.push('Admin');
            if ($('#roleTeacher').is(':checked')) roles.push('Teacher');
            if ($('#roleStudent').is(':checked')) roles.push('Student');
            
            // First upload profile picture if selected, then update user
            if (selectedProfilePicture) {
                const formData = new FormData();
                formData.append('userId', $('#editUserId').val());
                formData.append('profilePicture', selectedProfilePicture);
                formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());
                
                $.ajax({
                    url: '/Admin/UpdateUserProfilePicture',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(picResponse) {
                        if (picResponse.success) {
                            updateUserData(btn, roles);
                        } else {
                            showToast('danger', picResponse.message || 'Profil resmi yüklenemedi');
                            btn.prop('disabled', false).html('<i class="fas fa-save me-1"></i>Kaydet');
                        }
                    },
                    error: function() {
                        showToast('danger', 'Profil resmi yüklenirken hata oluştu');
                        btn.prop('disabled', false).html('<i class="fas fa-save me-1"></i>Kaydet');
                    }
                });
            } else {
                updateUserData(btn, roles);
            }
        });
        
        function updateUserData(btn, roles) {
            $.ajax({
                url: '/Admin/UpdateUser',
                type: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                data: {
                    userId: $('#editUserId').val(),
                    email: $('#editUserEmail').val(),
                    password: $('#editUserPassword').val(),
                    roles: roles,
                    locked: $('#editUserLocked').is(':checked')
                },
                traditional: true,
                success: function(response) {
                    if (response.success) {
                        $('#editUserModal').modal('hide');
                        showToast('success', response.message || 'Kullanıcı güncellendi');
                        loadUsers();
                    } else {
                        showToast('danger', response.message || 'Bir hata oluştu');
                    }
                    btn.prop('disabled', false).html('<i class="fas fa-save me-1"></i>Kaydet');
                },
                error: function() {
                    showToast('danger', 'Kullanıcı güncellenirken hata oluştu');
                    btn.prop('disabled', false).html('<i class="fas fa-save me-1"></i>Kaydet');
                }
            });
        }

        function escapeHtml(text) {
            if (!text) return '';
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }

        function showToast(type, message) {
            const bgColor = type === 'success' ? '#10b981' : '#ef4444';
            const icon = type === 'success' ? 'check-circle-fill' : 'x-circle-fill';
            
            const toast = $(`
                <div class="toast align-items-center text-white border-0" role="alert" 
                     style="background: ${bgColor}; border-radius: 12px; box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi bi-${icon} me-2"></i>${escapeHtml(message)}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `);

            let container = $('#toastContainer');
            if (container.length === 0) {
                container = $('<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;"></div>');
                $('body').append(container);
            }

            container.append(toast);
            const bsToast = new bootstrap.Toast(toast[0], { delay: 3000 });
            bsToast.show();

            toast.on('hidden.bs.toast', function () {
                $(this).remove();
            });
        }
    </script>
    
    <style>
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
}
