@{
    ViewBag.Title = "İstatistikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header with Melody Theme -->
<div class="d-sm-flex align-items-center justify-content-between mb-4 melody-fade-in">
    <div>
        <h1 class="h3 mb-0 melody-text-gradient">
            <i class="bi bi-bar-chart-line me-2"></i>İstatistikler
        </h1>
        <p class="text-muted mb-0 small">Sistem genelindeki istatistikleri ve raporları görüntüleyin</p>
    </div>
    <div class="d-flex gap-2">
        <span class="badge melody-badge-translucent" id="statsSummary"></span>
    </div>
</div>

<div class="container-fluid">

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-3">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-primary"><i class="bi bi-people fs-2"></i></div>
                    <div>
                        <div class="small text-muted">Öğrenci</div>
                        <div class="fs-4" id="statTotalStudents">0</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-success"><i class="bi bi-person-workspace fs-2"></i></div>
                    <div>
                        <div class="small text-muted">Öğretmen</div>
                        <div class="fs-4" id="statTotalTeachers">0</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-warning"><i class="bi bi-journal-check fs-2"></i></div>
                    <div>
                        <div class="small text-muted">Etüt</div>
                        <div class="fs-4" id="statTotalSessions">0</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-info"><i class="bi bi-building fs-2"></i></div>
                    <div>
                        <div class="small text-muted">Derslik</div>
                        <div class="fs-4" id="statTotalClassrooms">0</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-lg-6">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-header melody-card-header py-3">
                    <h6 class="m-0 melody-text-gradient">
                        <i class="bi bi-bar-chart me-2"></i>Öğretmen Etüt Dağılımı
                    </h6>
                </div>
                <div class="card-body"><div class="chart-box"><canvas id="teachersBarChart"></canvas></div></div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-header melody-card-header py-3">
                    <h6 class="m-0 melody-text-gradient">
                        <i class="bi bi-check-circle me-2"></i>Son Etüt Yoklama
                    </h6>
                </div>
                <div class="card-body"><div class="chart-box"><canvas id="attendanceDonut"></canvas></div></div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-6">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-header melody-card-header py-3">
                    <h6 class="m-0 melody-text-gradient">
                        <i class="bi bi-person-workspace me-2"></i>Öğretmen İstatistikleri
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group" id="teacherStats" style="max-height:360px;overflow:auto"></ul>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card melody-card shadow-sm border-0">
                <div class="card-header melody-card-header py-3">
                    <h6 class="m-0 melody-text-gradient">
                        <i class="bi bi-people me-2"></i>Öğrenci İstatistikleri
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group" id="studentStats" style="max-height:360px;overflow:auto"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        $(function () {
            var charts = {
                teachersBar: null,
                attendanceDonut: null
            };

            function toNumber(value) {
                var num = parseFloat(value);
                return isNaN(num) ? 0 : num;
            }

            function safeArray(value) {
                return Array.isArray(value) ? value : [];
            }

            function destroyChart(chart) {
                if (chart && typeof chart.destroy === 'function') {
                    chart.destroy();
                }
            }

            function renderCharts(teacherStats, recentSessions) {
                if (!window.Chart) {
                    console.warn('Chart.js is not available.');
                    return;
                }

                var topTeachers = teacherStats
                    .slice().sort(function (a, b) { return toNumber(b.totalSessions) - toNumber(a.totalSessions); })
                    .slice(0, 6);
                var tLabels = topTeachers.map(function (t) { return t.teacherName || ''; });
                var tData = topTeachers.map(function (t) { return toNumber(t.totalSessions); });
                var ctxBar = document.getElementById('teachersBarChart');
                if (ctxBar) {
                    destroyChart(charts.teachersBar);
                    charts.teachersBar = new Chart(ctxBar, {
                        type: 'bar',
                        data: { labels: tLabels, datasets: [{ label: 'Etüt', data: tData, backgroundColor: '#0d6efd', maxBarThickness: 40 }] },
                        options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
                    });
                }

                var statusCount = { Attended: 0, NotAttended: 0, Pending: 0 };
                recentSessions.forEach(function (r) {
                    var key = r.attendanceStatus;
                    if (key !== 'Attended' && key !== 'NotAttended' && key !== 'Pending') {
                        key = 'Pending';
                    }
                    statusCount[key] = (statusCount[key] || 0) + 1;
                });
                var ctxDonut = document.getElementById('attendanceDonut');
                if (ctxDonut) {
                    destroyChart(charts.attendanceDonut);
                    charts.attendanceDonut = new Chart(ctxDonut, {
                        type: 'doughnut',
                        data: {
                            labels: ['Geldi', 'Gelmedi', 'Bekliyor'],
                            datasets: [{
                                data: [statusCount.Attended, statusCount.NotAttended, statusCount.Pending],
                                backgroundColor: ['#28a745', '#dc3545', '#ffc107']
                            }]
                        },
                        options: { responsive: true, maintainAspectRatio: false, cutout: '60%', plugins: { legend: { position: 'bottom' } } }
                    });
                }
            }

            $.get('/Admin/GetStatistics', function (res) {
                if (!res || !res.success) return;

                var general = res.generalStats || {};
                $('#statTotalStudents').text(toNumber(general.totalStudents));
                $('#statTotalTeachers').text(toNumber(general.totalTeachers));
                $('#statTotalSessions').text(toNumber(general.totalSessions));
                $('#statTotalClassrooms').text(toNumber(general.totalClassrooms));
                $('#statsSummary').text('Bugün: ' + (general.todaySessions || 0) + ' • Bu Hafta: ' + (general.thisWeekSessions || 0) + ' • Bu Ay: ' + (general.thisMonthSessions || 0));

                var teacherStats = safeArray(res.teacherStats);
                var tlist = $('#teacherStats');
                tlist.empty();
                teacherStats.forEach(function (t) {
                    var rate = Math.round(toNumber(t.absenceRate));
                    tlist.append(`
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span>${t.teacherName || ''}</span>
                                <span class="badge bg-primary">${toNumber(t.totalSessions)}</span>
                            </div>
                            <div class="progress" style="height:6px">
                                <div class="progress-bar bg-danger" role="progressbar" style="width:${rate}%" aria-valuenow="${rate}" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="small text-muted mt-1">Devamsızlık: ${rate}%</div>
                        </li>`);
                });

                var studentStats = safeArray(res.studentStats);
                var slist = $('#studentStats');
                slist.empty();
                studentStats.forEach(function (s) {
                    slist.append(`
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>${s.studentName || ''}</span>
                            <span class="badge bg-primary">${toNumber(s.totalSessions)}</span>
                        </li>`);
                });

                renderCharts(teacherStats, safeArray(res.recentSessions));
            });
        });
    </script>
    <style>
        .chart-box { position: relative; height: 280px; }
        @@media (max-width: 768px) { .chart-box { height: 220px; } }
    </style>
}
