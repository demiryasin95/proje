@section Scripts {
    <script>
        // Password visibility toggle
        function togglePasswordVisibility(inputId) {
            var input = document.getElementById(inputId);
            input.type = input.type === 'password' ? 'text' : 'password';
        }
        
        $(document).ready(function() {
            // Phone Masking
            $('.phone-mask').on('input', function() {
                var x = $(this).val().replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2})/);
                $(this).val(!x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? ' ' + x[3] : '') + (x[4] ? ' ' + x[4] : ''));
            });

            // Photo Preview
            function readURL(input, previewId) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#' + previewId).attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            
            $("#addTeacherPhoto").change(function() { readURL(this, 'addTeacherPhotoPreview'); });
            $("#editPhoto").change(function() { readURL(this, 'editTeacherPhotoPreview'); });

            // Search & Filter Logic
            function filterTable() {
                var value = $("#teacherSearch").val().toLowerCase();
                var branch = $("#teacherBranchFilter").val();
                var count = 0;

                $("#teachersTableBody tr").filter(function() {
                    var textMatch = $(this).text().toLowerCase().indexOf(value) > -1;
                    var branchMatch = branch === "" || $(this).data("branch") === branch;
                    var isVisible = textMatch && branchMatch;
                    $(this).toggle(isVisible);
                    if(isVisible) count++;
                });
                
                $("#teacherTableInfo").text("TOPLAM " + count + " KAYIT BULUNDU");
            }

            $("#teacherSearch").on("keyup", filterTable);
            $("#teacherBranchFilter").on("change", filterTable);
            
            // CRUD Operations
            // Add Teacher
            $('#saveTeacherBtn').click(function() {
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Kaydediliyor...');
                
                var formData = new FormData($('#addTeacherForm')[0]);
                $.ajax({
                    url: '/Admin/AddTeacher',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if(response.success) {
                            toast.success('Öğretmen başarıyla eklendi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(response.message || 'Bir hata oluştu');
                            btn.prop('disabled', false).html('Kaydet');
                        }
                    },
                    error: function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Kaydet');
                    }
                });
            });

            // Edit Teacher
            $('.btn-edit').click(function() {
                var id = $(this).data('id');
                $.get('/Admin/GetTeachers', function(res) {
                    if (res.success) {
                        var teacher = res.teachers.find(x => x.id === id);
                        if(teacher) {
                            $('#editId').val(teacher.id);
                            var names = teacher.fullName.split(' ');
                            $('#editFirstName').val(names[0]);
                            $('#editLastName').val(names.slice(1).join(' '));
                            $('#editBranch').val(teacher.branch);
                            $('#editPhoneNumber').val(teacher.phone);
                            $('#editGender').val(teacher.gender);
                            
                            // Avatar with initials
                            var bgColor = teacher.gender === 'Female' ? 'ec4899' : '4f46e5';
                            var initials = teacher.fullName.split(' ').map(n => n[0]).join('').substring(0,2);
                            var avatarUrl = 'https://ui-avatars.com/api/?name=' + encodeURIComponent(initials) + '&background=' + bgColor + '&color=fff&size=100&bold=true';
                            $('#editTeacherPhotoPreview').attr('src', teacher.photo || avatarUrl);
                            
                            $('#editTeacherModal').modal('show');
                        }
                    }
                }).fail(function(xhr) {
                    toast.error('Öğretmen bilgileri yüklenemedi');
                    console.error('GetTeachers error:', xhr);
                });
            });
            
            $('#updateTeacherBtn').click(function() {
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Güncelleniyor...');
                
                var formData = new FormData($('#editTeacherForm')[0]);
                var token = $('input[name="__RequestVerificationToken"]').val();
                
                $.ajax({
                    url: '/Admin/UpdateTeacher',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: { 'RequestVerificationToken': token },
                    success: function(response) {
                        if(response.success) {
                            toast.success('Öğretmen başarıyla güncellendi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(response.message || 'Bir hata oluştu');
                            btn.prop('disabled', false).html('Güncelle');
                        }
                    },
                    error: function(xhr) {
                        console.error('Update error:', xhr.responseText);
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Güncelle');
                    }
                });
            });
            
            // Delete Teacher - Using Modal
            var deleteTeacherId = null;
            $('.btn-delete').click(function() {
                deleteTeacherId = $(this).data('id');
                $('#deleteTeacherModal').modal('show');
            });
            
            $('#confirmDeleteTeacherBtn').click(function() {
                if(deleteTeacherId) {
                    var btn = $(this);
                    btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Siliniyor...');
                    
                    $.post('/Admin/DeleteTeacher', { id: deleteTeacherId }, function(res) {
                        if(res.success) {
                            $('#deleteTeacherModal').modal('hide');
                            toast.success('Öğretmen başarıyla silindi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(res.message || 'Silme işlemi başarısız');
                            btn.prop('disabled', false).html('Sil');
                        }
                    }).fail(function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Sil');
                    });
                }
            });

            // Reset Password
            $('.btn-reset-password').click(function() {
                var id = $(this).data('id');
                var newPassword = prompt("Yeni parolayı girin (en az 6 karakter):");
                if(newPassword) {
                    if(newPassword.length < 6) {
                        toast.warning('Parola en az 6 karakter olmalıdır');
                        return;
                    }
                    $.post('/Admin/ResetTeacherPassword', { teacherId: id, newPassword: newPassword }, function(res) {
                        if(res.success) toast.success(res.message || 'Şifre sıfırlandı!');
                        else toast.error(res.message || 'Şifre sıfırlama başarısız');
                    }).fail(function() {
                        toast.error('Sunucu hatası oluştu');
                    });
                }
            });

            // Unlink Account
            $('.btn-unlink-account').click(function() {
                var id = $(this).data('id');
                var btn = $(this);
                
                if(confirm('Bu öğretmenin hesap bağlantısını kesmek istediğinize emin misiniz?')) {
                    btn.prop('disabled', true);
                    $.post('/Admin/UnlinkTeacherAccount', { teacherId: id }, function(res) {
                        if(res.success) {
                            toast.success('Hesap bağlantısı kesildi');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(res.message || 'İşlem başarısız');
                            btn.prop('disabled', false);
                        }
                    }).fail(function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false);
                    });
                }
            });

            // ... Create Account ...
            $('.btn-account').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                
                // Reset form
                $('#createTeacherAccountForm')[0].reset();
                $('#accountTeacherId').val(id);
                $('#accountTeacherName').text(name);
                
                // Auto-generate username suggestion
                var suggestedUsername = name.toLowerCase()
                    .replace(/ğ/g, 'g').replace(/ü/g, 'u').replace(/ş/g, 's')
                    .replace(/ı/g, 'i').replace(/ö/g, 'o').replace(/ç/g, 'c')
                    .replace(/\s+/g, '.');
                $('#accountTeacherUsername').val(suggestedUsername);
                
                $('#createTeacherAccountModal').modal('show');
            });

            // Toggle Password Visibility
            $('#showTeacherPassword').change(function() {
                var type = $(this).is(':checked') ? 'text' : 'password';
                $('#accountTeacherPassword').attr('type', type);
                $('#accountTeacherPasswordConfirm').attr('type', type);
            });

            // Save Account
            $('#saveTeacherAccountBtn').click(function() {
                var pwd = $('#accountTeacherPassword').val();
                var pwdConfirm = $('#accountTeacherPasswordConfirm').val();
                
                if(pwd !== pwdConfirm) {
                    alert('Parolalar eşleşmiyor!');
                    return;
                }
                
                if(pwd.length < 6) {
                    alert('Parola en az 6 karakter olmalıdır.');
                    return;
                }

                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>İşleniyor...');

                $.post('/Admin/CreateTeacherAccount', $('#createTeacherAccountForm').serialize(), function(res) {
                    if(res.success) {
                        $('#createTeacherAccountModal').modal('hide');
                        location.reload();
                    } else {
                        alert(res.message);
                        btn.prop('disabled', false).html('<i class="fas fa-check me-2"></i>Hesabı Oluştur');
                    }
                }).fail(function() {
                    alert('Bir hata oluştu.');
                    btn.prop('disabled', false).html('<i class="fas fa-check me-2"></i>Hesabı Oluştur');
                });
            });

            // Initial Filter
            filterTable();
        });
    </script>
}
