@model IEnumerable<StudentStudyProgram.Models.Teacher>
@using System.Linq
@{
    ViewBag.Title = "Öğretmen Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    // Helper to resolve paths
    Func<string, string> resolvePhoto = path =>
    {
        if (string.IsNullOrWhiteSpace(path)) return null;
        if (path.StartsWith("http") || path.StartsWith("data:")) return path;
        var normalized = path.StartsWith("~") ? path : ("~" + (path.StartsWith("/") ? path : "/" + path));
        return Url.Content(normalized);
    };
    
    // Avatar placeholders using ui-avatars.com
    Func<string, string, string> getAvatar = (name, gender) => {
        var bgColor = gender == "Female" ? "ec4899" : "4f46e5";
        var initials = "";
        if (!string.IsNullOrEmpty(name)) {
            var parts = name.Split(' ');
            initials = parts.Length > 1 ? (parts[0][0].ToString() + parts[parts.Length-1][0].ToString()) : parts[0][0].ToString();
        }
        return $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(initials)}&background={bgColor}&color=fff&size=80&bold=true";
    };
}

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4 fade-in">
    <div>
        <h1 class="h3 mb-0 text-main fw-bold">
            <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Öğretmen Yönetimi
        </h1>
        <p class="text-secondary mb-0">Öğretmen kayıtlarını yönetin, düzenleyin ve yeni öğretmenler ekleyin</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTeacherModal">
            <i class="fas fa-user-plus me-2"></i>Yeni Öğretmen
        </button>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4 fade-in">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h6 class="m-0 fw-bold text-primary">
            <i class="fas fa-filter me-2"></i>Arama ve Filtreleme
        </h6>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0 ps-0" id="teacherSearch" placeholder="Ara (ad, branş, telefon)">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="teacherBranchFilter">
                    <option value="">Tüm Branşlar</option>
                    @foreach (var b in Model.Select(x => x.Branch).Distinct().OrderBy(x => x))
                    {
                        <option value="@b">@b</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" id="teacherPageSize">
                    <option value="5">5 Kayıt</option>
                    <option value="10" selected>10 Kayıt</option>
                    <option value="20">20 Kayıt</option>
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button class="btn btn-outline-secondary w-100" id="refreshBtn" title="Yenile">
                    <i class="fas fa-sync-alt"></i>
                </button>
                <button class="btn btn-outline-danger w-100" id="clearFilterBtn" title="Filtreleri Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Teachers Table -->
<div class="card fade-in">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h6 class="m-0 fw-bold text-primary">
            <i class="fas fa-list me-2"></i>Öğretmen Listesi
        </h6>
        <span class="badge bg-primary rounded-pill" id="teacherTableInfo">
            TOPLAM @(Model != null ? Model.Count() : 0) KAYIT BULUNDU
        </span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="teachersTable">
                <thead class="bg-light text-muted small fw-bold text-uppercase">
                    <tr>
                        <th width="60" class="text-center"><i class="fas fa-image text-muted"></i></th>
                        <th>ÖĞRETMEN</th>
                        <th>BRANŞ</th>
                        <th>Telefon</th>
                        <th>Kayıt Tarihi</th>
                        <th class="text-end pe-4">HESAP DURUMU</th>
                        <th width="120" class="text-end">İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody id="teachersTableBody">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var t in Model)
                        {
                            var avatarUrl = getAvatar(t.FullName, t.Gender);
                            var photoSrc = !string.IsNullOrEmpty(t.PhotoPath) ? resolvePhoto(t.PhotoPath) : null;
                            var imgSrc = !string.IsNullOrEmpty(photoSrc) ? photoSrc : avatarUrl;
                            
                            <tr class="teacher-row" data-branch="@t.Branch">
                                <td class="text-center" style="width: 60px;">
                                    <img src="@imgSrc" 
                                         onerror="this.src='@avatarUrl';"
                                         alt="@t.FullName" 
                                         class="rounded-circle shadow-sm" 
                                         width="40" height="40" 
                                         style="object-fit: cover;">
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark teacher-name" style="font-size: 0.95rem;">@t.FullName</span>
                                        <small class="text-muted" style="font-size: 0.8rem;">
                                            <i class="fas @(t.Gender == "Female" ? "fa-venus" : "fa-mars") me-1"></i>
                                            @(t.Gender == "Female" ? "Kadın" : "Erkek")
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-soft-info text-info">@t.Branch</span>
                                </td>
                                <td>
                                    @if(!string.IsNullOrEmpty(t.PhoneNumber)) {
                                        <a href="tel:@t.PhoneNumber" class="text-decoration-none text-secondary">
                                            <i class="fas fa-phone-alt me-1 text-muted small"></i>@t.PhoneNumber
                                        </a>
                                    } else {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-secondary">
                                        <i class="far fa-calendar me-1 text-muted"></i>@t.CreatedAt.ToString("dd.MM.yyyy")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (!string.IsNullOrEmpty(t.UserId))
                                    {
                                        <span class="badge rounded-pill bg-success px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1 btn-account" data-id="@t.Id" data-name="@t.FullName" title="Hesap Oluştur">
                                            <i class="fas fa-user-plus me-1"></i>Hesap Yok
                                        </button>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-icon btn-indigo rounded-3 shadow-sm btn-edit" data-id="@t.Id" title="Düzenle">
                                            <i class="fas fa-pen text-white"></i>
                                        </button>
                                        @if (!string.IsNullOrEmpty(t.UserId))
                                        {
                                            <button class="btn btn-sm btn-icon btn-warning rounded-3 shadow-sm btn-reset-password" data-id="@t.Id" title="Şifre Sıfırla">
                                                <i class="fas fa-key text-white"></i>
                                            </button>
                                            <button class="btn btn-sm btn-icon btn-secondary rounded-3 shadow-sm btn-unlink-account" data-id="@t.Id" title="Hesap Bağlantısını Kes">
                                                <i class="fas fa-unlink text-white"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-icon btn-success rounded-3 shadow-sm btn-account" data-id="@t.Id" data-name="@t.FullName" title="Hesap Oluştur">
                                                <i class="fas fa-user-plus text-white"></i>
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-icon btn-danger rounded-3 shadow-sm btn-delete" data-id="@t.Id" title="Sil">
                                            <i class="fas fa-trash text-white"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-chalkboard-teacher fa-3x mb-3 opacity-50"></i>
                                    <h5>Henüz öğretmen kaydı bulunmuyor</h5>
                                    <p class="mb-3">Sisteme yeni öğretmen ekleyerek başlayın.</p>
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTeacherModal">
                                        <i class="fas fa-plus me-2"></i>Yeni Öğretmen Ekle
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <div class="card-footer bg-transparent border-top d-flex align-items-center justify-content-between py-3">
            <small class="text-muted" id="teacherPageInfo">Sayfa 1 / 1</small>
            <nav>
                <ul class="pagination pagination-sm mb-0" id="teacherPagination">
                    <!-- JS will populate this -->
                </ul>
            </nav>
        </div>
    </div>
</div>

