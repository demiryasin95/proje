@model IEnumerable<StudentStudyProgram.Models.Student>
@using System.Linq
@{
    ViewBag.Title = "Öğrenci Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    // Helper to resolve paths
    Func<string, string> resolvePhoto = path =>
    {
        if (string.IsNullOrWhiteSpace(path)) return null;
        if (path.StartsWith("http") || path.StartsWith("data:")) return path;
        var normalized = path.StartsWith("~") ? path : ("~" + (path.StartsWith("/") ? path : "/" + path));
        return Url.Content(normalized);
    };
    
    // Avatar placeholders using ui-avatars.com
    Func<string, string, string> getAvatar = (name, gender) => {
        var bgColor = gender == "Female" ? "ec4899" : "4f46e5";
        var initials = "";
        if (!string.IsNullOrEmpty(name)) {
            var parts = name.Split(' ');
            initials = parts.Length > 1 ? (parts[0][0].ToString() + parts[parts.Length-1][0].ToString()) : parts[0][0].ToString();
        }
        return $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(initials)}&background={bgColor}&color=fff&size=80&bold=true";
    };
}

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4 fade-in">
    <div>
        <h1 class="h3 mb-0 text-main fw-bold">
            <i class="fas fa-user-graduate me-2 text-primary"></i>Öğrenci Yönetimi
        </h1>
        <p class="text-secondary mb-0">Öğrenci kayıtlarını yönetin, düzenleyin ve yeni öğrenciler ekleyin</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
            <i class="fas fa-user-plus me-2"></i>Yeni Öğrenci
        </button>
        <button class="btn btn-outline-primary" id="exportBtn" title="Dışa Aktar">
            <i class="fas fa-file-excel me-2"></i>Excel
        </button>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4 fade-in">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h6 class="m-0 fw-bold text-primary">
            <i class="fas fa-filter me-2"></i>Arama ve Filtreleme
        </h6>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0 ps-0" id="studentSearch" placeholder="Öğrenci ara... (Ad, Soyad, No)">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="classFilter">
                    <option value="">Tüm Sınıflar</option>
                    @foreach (var className in Model.Select(s => s.ClassName).Distinct().OrderBy(c => c))
                    {
                        <option value="@className">@className</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" id="pageSize">
                    <option value="10">10 Kayıt</option>
                    <option value="25">25 Kayıt</option>
                    <option value="50">50 Kayıt</option>
                    <option value="100">100 Kayıt</option>
                </select>
            </div>
            <div class="col-md-2 d-flex gap-2">
                <button class="btn btn-outline-secondary w-100" id="refreshBtn" title="Yenile">
                    <i class="fas fa-sync-alt"></i>
                </button>
                <button class="btn btn-outline-danger w-100" id="clearFilterBtn" title="Filtreleri Temizle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Students Table -->
<div class="card fade-in">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h6 class="m-0 fw-bold text-primary">
            <i class="fas fa-list me-2"></i>Öğrenci Listesi
        </h6>
        <span class="badge bg-primary rounded-pill" id="tableInfo">
            Yükleniyor...
        </span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="studentsTable">
                <thead class="bg-light text-muted small fw-bold text-uppercase">
                    <tr>
                        <th width="60" class="text-center"><i class="fas fa-image text-muted"></i></th>
                        <th>ÖĞRENCİ</th>
                        <th>SINIF</th>
                        <th>Telefon</th>
                        <th>Kayıt Tarihi</th>
                        <th class="text-end pe-4">HESAP DURUMU</th>
                        <th width="120" class="text-end"></th>
                    </tr>
                </thead>
                <tbody id="studentsTableBody">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            var avatarUrl = getAvatar(student.FullName, student.Gender);
                            var photoSrc = !string.IsNullOrEmpty(student.PhotoPath) ? resolvePhoto(student.PhotoPath) : null;
                            var imgSrc = !string.IsNullOrEmpty(photoSrc) ? photoSrc : avatarUrl;
                            
                            <tr class="student-row" data-class="@student.ClassName">
                                <td class="text-center" style="width: 60px;">
                                    <img src="@imgSrc" 
                                         onerror="this.src='@avatarUrl';"
                                         alt="@student.FullName" 
                                         class="rounded-circle shadow-sm" 
                                         width="40" height="40" 
                                         style="object-fit: cover;">
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark student-name" style="font-size: 0.95rem;">@student.FullName</span>
                                        <small class="text-muted" style="font-size: 0.8rem;">
                                            <i class="fas @(student.Gender == "Female" ? "fa-venus" : "fa-mars") me-1"></i>
                                            @(student.Gender == "Female" ? "Kadın" : "Erkek")
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-soft-primary text-primary">@student.ClassName</span>
                                </td>
                                <td>
                                    @if(!string.IsNullOrEmpty(student.PhoneNumber)) {
                                        <a href="tel:@student.PhoneNumber" class="text-decoration-none text-secondary">
                                            <i class="fas fa-phone-alt me-1 text-muted small"></i>@student.PhoneNumber
                                        </a>
                                    } else {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-secondary">
                                        <i class="far fa-calendar me-1 text-muted"></i>@student.CreatedAt.ToString("dd.MM.yyyy")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (student.User != null && !string.IsNullOrEmpty(student.User.UserName))
                                    {
                                        <span class="badge rounded-pill bg-success px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1 btn-account" data-id="@student.Id" data-name="@student.FullName" title="Hesap Oluştur">
                                            <i class="fas fa-user-plus me-1"></i>Hesap Yok
                                        </button>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-icon btn-indigo rounded-3 shadow-sm btn-edit" data-id="@student.Id" title="Düzenle">
                                            <i class="fas fa-pen text-white"></i>
                                        </button>
                                        @if (!string.IsNullOrEmpty(student.UserId))
                                        {
                                            <button class="btn btn-sm btn-icon btn-warning rounded-3 shadow-sm btn-reset-password" data-id="@student.Id" title="Şifre Sıfırla">
                                                <i class="fas fa-key text-white"></i>
                                            </button>
                                            <button class="btn btn-sm btn-icon btn-secondary rounded-3 shadow-sm btn-unlink-account" data-id="@student.Id" title="Hesap Bağlantısını Kes">
                                                <i class="fas fa-unlink text-white"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-icon btn-success rounded-3 shadow-sm btn-account" data-id="@student.Id" data-name="@student.FullName" title="Hesap Oluştur">
                                                <i class="fas fa-user-plus text-white"></i>
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-icon btn-danger rounded-3 shadow-sm btn-delete" data-id="@student.Id" title="Sil">
                                            <i class="fas fa-trash text-white"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-user-slash fa-3x mb-3 opacity-50"></i>
                                    <h5>Henüz öğrenci kaydı bulunmuyor</h5>
                                    <p class="mb-3">Sisteme yeni öğrenci ekleyerek başlayın.</p>
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
                                        <i class="fas fa-plus me-2"></i>İlk Öğrenciyi Ekle
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <div class="card-footer bg-transparent border-top d-flex align-items-center justify-content-between py-3">
            <small class="text-muted" id="pageInfo">Sayfa 1 / 1</small>
            <nav>
                <ul class="pagination pagination-sm mb-0" id="pagination">
                    <!-- JS will populate this -->
                </ul>
            </nav>
        </div>
    </div>
</div>

