@section Scripts {
    <script>
        // Password visibility toggle
        function toggleStudentPasswordVisibility(inputId) {
            var input = document.getElementById(inputId);
            input.type = input.type === 'password' ? 'text' : 'password';
        }
        
        $(document).ready(function() {
            // Phone Masking
            $('.phone-mask').on('input', function() {
                var x = $(this).val().replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2})/);
                $(this).val(!x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? ' ' + x[3] : '') + (x[4] ? ' ' + x[4] : ''));
            });

            // Photo Preview
            function readURL(input, previewId) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#' + previewId).attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            
            $("#addPhoto").change(function() { readURL(this, 'addPhotoPreview'); });
            $("#editPhoto").change(function() { readURL(this, 'editPhotoPreview'); });

            // Search & Filter Logic
            function filterTable() {
                var value = $("#studentSearch").val().toLowerCase();
                var className = $("#classFilter").val();
                var count = 0;

                $("#studentsTableBody tr").filter(function() {
                    var textMatch = $(this).text().toLowerCase().indexOf(value) > -1;
                    var classMatch = className === "" || $(this).data("class") === className;
                    var isVisible = textMatch && classMatch;
                    $(this).toggle(isVisible);
                    if(isVisible) count++;
                });
                
                $("#tableInfo").text(count + " kayıt bulundu");
            }

            $("#studentSearch").on("keyup", filterTable);
            $("#classFilter").on("change", filterTable);
            
            // Show Password Checkbox
            $('#showStudentPassword').change(function() {
                var type = $(this).is(':checked') ? 'text' : 'password';
                $('#accountStudentPassword, #accountStudentPasswordConfirm').attr('type', type);
            });
            
            // Add Student
            $('#saveStudentBtn').click(function() {
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Kaydediliyor...');
                
                var formData = new FormData($('#addStudentForm')[0]);
                $.ajax({
                    url: '/Admin/AddStudent',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if(response.success) {
                            toast.success('Öğrenci başarıyla eklendi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(response.message || 'Bir hata oluştu');
                            btn.prop('disabled', false).html('Kaydet');
                        }
                    },
                    error: function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Kaydet');
                    }
                });
            });

            // Edit Student
            $('.btn-edit').click(function() {
                var id = $(this).data('id');
                $.get('/Admin/GetStudents', function(res) {
                    if (res.success) {
                        var student = res.students.find(x => x.id === id);
                        if(student) {
                            $('#editId').val(student.id);
                            var names = student.fullName.split(' ');
                            $('#editFirstName').val(names[0]);
                            $('#editLastName').val(names.slice(1).join(' '));
                            $('#editClassName').val(student.className);
                            $('#editPhoneNumber').val(student.phone);
                            $('#editGender').val(student.gender);
                            $('#editEmail').val(student.email);
                            
                            // Avatar with initials
                            var bgColor = student.gender === 'Female' ? 'ec4899' : '4f46e5';
                            var initials = student.fullName.split(' ').map(n => n[0]).join('').substring(0,2);
                            var avatarUrl = 'https://ui-avatars.com/api/?name=' + encodeURIComponent(initials) + '&background=' + bgColor + '&color=fff&size=100&bold=true';
                            $('#editPhotoPreview').attr('src', student.photo || avatarUrl);
                            
                            $('#editStudentModal').modal('show');
                        }
                    }
                }).fail(function(xhr) {
                    toast.error('Öğrenci bilgileri yüklenemedi');
                    console.error('GetStudents error:', xhr);
                });
            });
            
            $('#updateStudentBtn').click(function() {
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Güncelleniyor...');
                
                var formData = new FormData($('#editStudentForm')[0]);
                var token = $('input[name="__RequestVerificationToken"]').val();
                
                $.ajax({
                    url: '/Admin/UpdateStudent',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: { 'RequestVerificationToken': token },
                    success: function(response) {
                        if(response.success) {
                            toast.success('Öğrenci başarıyla güncellendi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(response.message || 'Bir hata oluştu');
                            btn.prop('disabled', false).html('Güncelle');
                        }
                    },
                    error: function(xhr) {
                        console.error('Update error:', xhr.responseText);
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Güncelle');
                    }
                });
            });
            
            // Delete Student - Using Modal
            var deleteStudentId = null;
            $('.btn-delete').click(function() {
                deleteStudentId = $(this).data('id');
                $('#deleteStudentId').val(deleteStudentId);
                $('#deleteStudentModal').modal('show');
            });
            
            $('#confirmDeleteStudentBtn').click(function() {
                if(deleteStudentId) {
                    var btn = $(this);
                    btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Siliniyor...');
                    
                    $.post('/Admin/DeleteStudent', { id: deleteStudentId }, function(res) {
                        if(res.success) {
                            $('#deleteStudentModal').modal('hide');
                            toast.success('Öğrenci başarıyla silindi!');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(res.message || 'Silme işlemi başarısız');
                            btn.prop('disabled', false).html('Sil');
                        }
                    }).fail(function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false).html('Sil');
                    });
                }
            });

            // Reset Password - Using Modal
            var resetPasswordStudentId = null;
            $('.btn-reset-password').click(function() {
                resetPasswordStudentId = $(this).data('id');
                $('#resetPasswordStudentId').val(resetPasswordStudentId);
                $('#newStudentPassword').val('');
                $('#resetPasswordModal').modal('show');
            });
            
            $('#confirmResetPasswordBtn').click(function() {
                var newPassword = $('#newStudentPassword').val();
                if(!newPassword || newPassword.length < 6) {
                    toast.warning('Parola en az 6 karakter olmalıdır');
                    return;
                }
                
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>İşleniyor...');
                
                $.post('/Admin/ResetStudentPassword', { 
                    studentId: resetPasswordStudentId, 
                    newPassword: newPassword 
                }, function(res) {
                    $('#resetPasswordModal').modal('hide');
                    if(res.success) {
                        toast.success(res.message || 'Şifre başarıyla sıfırlandı!');
                    } else {
                        toast.error(res.message || 'Şifre sıfırlama başarısız');
                    }
                    btn.prop('disabled', false).html('<i class="fas fa-key me-1"></i>Şifreyi Sıfırla');
                }).fail(function() {
                    toast.error('Sunucu hatası oluştu');
                    btn.prop('disabled', false).html('<i class="fas fa-key me-1"></i>Şifreyi Sıfırla');
                });
            });

            // Unlink Account
            $('.btn-unlink-account').click(function() {
                var id = $(this).data('id');
                var btn = $(this);
                
                if(confirm('Bu öğrencinin hesap bağlantısını kesmek istediğinize emin misiniz?')) {
                    btn.prop('disabled', true);
                    $.post('/Admin/UnlinkStudentAccount', { studentId: id }, function(res) {
                        if(res.success) {
                            toast.success('Hesap bağlantısı kesildi');
                            setTimeout(function() { location.reload(); }, 1000);
                        } else {
                            toast.error(res.message || 'İşlem başarısız');
                            btn.prop('disabled', false);
                        }
                    }).fail(function() {
                        toast.error('Sunucu hatası oluştu');
                        btn.prop('disabled', false);
                    });
                }
            });

            // Create Account - Using Modal
            $('.btn-account').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                
                $('#createStudentAccountForm')[0].reset();
                $('#accountStudentId').val(id);
                $('#accountStudentName').text(name);
                
                // Auto-generate username suggestion
                var suggestedUsername = name.toLowerCase()
                    .replace(/ğ/g, 'g').replace(/ü/g, 'u').replace(/ş/g, 's')
                    .replace(/ı/g, 'i').replace(/ö/g, 'o').replace(/ç/g, 'c')
                    .replace(/\s+/g, '.');
                $('#accountStudentUsername').val(suggestedUsername);
                
                $('#createStudentAccountModal').modal('show');
            });
            
            $('#saveStudentAccountBtn').click(function() {
                var pwd = $('#accountStudentPassword').val();
                var pwdConfirm = $('#accountStudentPasswordConfirm').val();
                
                if(pwd !== pwdConfirm) {
                    toast.warning('Parolalar eşleşmiyor!');
                    return;
                }
                
                if(pwd.length < 6) {
                    toast.warning('Parola en az 6 karakter olmalıdır');
                    return;
                }

                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Oluşturuluyor...');

                $.post('/Admin/CreateStudentAccount', {
                    studentId: $('#accountStudentId').val(),
                    username: $('#accountStudentUsername').val(),
                    password: pwd
                }, function(res) {
                    if(res.success) {
                        $('#createStudentAccountModal').modal('hide');
                        toast.success(res.message || 'Hesap başarıyla oluşturuldu!');
                        setTimeout(function() { location.reload(); }, 1000);
                    } else {
                        toast.error(res.message || 'Hesap oluşturulamadı');
                        btn.prop('disabled', false).html('<i class="fas fa-check me-1"></i>Hesabı Oluştur');
                    }
                }).fail(function() {
                    toast.error('Sunucu hatası oluştu');
                    btn.prop('disabled', false).html('<i class="fas fa-check me-1"></i>Hesabı Oluştur');
                });
            });

            // Refresh & Clear Filters
            $('#refreshBtn').click(function() {
                location.reload();
            });
            
            $('#clearFilterBtn').click(function() {
                $('#studentSearch').val('');
                $('#classFilter').val('');
                filterTable();
                toast.info('Filtreler temizlendi');
            });

            // Initial Filter
            filterTable();
        });
    </script>
}
