            // Phone format
            function formatPhone(v){
                var d=(v||'').replace(/\D/g,'');
                if(d.length===0) return '';
                if(!d.startsWith('0')) d='0'+d;
                return d.replace(/(\d{1})(\d{3})(\d{3})(\d{2})(\d{2}).*/, '$1$2 $3 $4 $5').trim();
            }
            $('#phone').on('input', function(){ this.value = formatPhone(this.value); });

