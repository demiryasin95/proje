@section scripts {
    <script>
        $(function(){
            if($('.toast-zone').length === 0) {
                $('body').append('<div class="toast-zone"></div>');
            }

            function showToast(type, message) {
                var icon = type === 'success' ? 'bi-check-lg' : 'bi-exclamation-lg';
                var toastHtml = `
                    <div class="toast-msg ${type}">
                        <div class="toast-icon-box ${type}">
                            <i class="bi ${icon}"></i>
                        </div>
                        <div class="toast-text">${message}</div>
                    </div>
                `;
                var $toast = $(toastHtml);
                $('.toast-zone').append($toast);
                setTimeout(function() {
                    $toast.fadeOut(250, function() { $(this).remove(); });
                }, 3000);
            }

            function setBtnLoading(btn, isLoading, originalText) {
                if(isLoading) {
                    btn.data('original-text', btn.html());
                    btn.html('<span class="spinner-border spinner-xs me-2"></span>' + (originalText || 'ƒ∞≈üleniyor...'));
                    btn.prop('disabled', true);
                } else {
                    btn.html(btn.data('original-text'));
                    btn.prop('disabled', false);
                }
            }

            // Load profile
            $.get('@Url.Action("GetProfile","Manage")', function(res){
                if(res && res.success){
                    $('#displayName').val(res.profile.displayName||'');
                    $('#email').val(res.profile.email||'');
                    $('#phone').val(res.profile.phone||'');

                    if(res.profile.profilePictureUrl){
                        var $img = $('#currentProfilePicture');
                        $img.attr('src', res.profile.profilePictureUrl).addClass('loaded');
                        $('#avatarCircle').addClass('has-image');
                        $('#removeProfileBtn').removeClass('d-none');
                    }
                }
            });

            // Camera icon click - trigger file input
            $(document).on('click', '#cameraIconBtn', function(e){
                e.preventDefault();
                e.stopPropagation();
                console.log('Camera clicked');
                $('#profilePictureInput')[0].click();
            });

            // Profile picture preview
            $('#profilePictureInput').on('change', function(e){
                var file = this.files[0];
                if(file){
                    if(file.size > 5 * 1024 * 1024){
                        showToast('error', 'Dosya boyutu maksimum 5MB olabilir');
                        this.value = '';
                        return;
                    }

                    var allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
                    if(!allowedTypes.includes(file.type)){
                        showToast('error', 'Sadece JPG, PNG, GIF ve WEBP formatlarƒ± kabul edilir');
                        this.value = '';
                        return;
                    }

                    var reader = new FileReader();
                    reader.onload = function(e){
                        var $img = $('#currentProfilePicture');
                        $img.attr('src', e.target.result).addClass('loaded');
                        $('#avatarCircle').addClass('has-image');
                        console.log('Image preview set');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Upload profile picture
            $('#uploadProfileBtn').on('click', function(e){
                e.preventDefault();
                var fileInput = $('#profilePictureInput')[0];
                if(!fileInput.files || fileInput.files.length === 0){
                    showToast('error', 'L√ºtfen bir resim se√ßin');
                    return;
                }

                var btn = $(this);
                setBtnLoading(btn, true, 'Y√ºkleniyor...');

                var formData = new FormData();
                formData.append('profilePicture', fileInput.files[0]);
                formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

                $.ajax({
                    url: '@Url.Action("UploadProfilePicture","Manage")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(res){
                        setBtnLoading(btn, false);
                        if(res.success){
                            showToast('success', res.message || 'Profil resmi g√ºncellendi');
                            var picUrl = res.pictureUrl;
                            var $img = $('#currentProfilePicture');
                            $img.attr('src', picUrl).addClass('loaded');
                            $('#avatarCircle').addClass('has-image');
                            $('#removeProfileBtn').removeClass('d-none');
                            fileInput.value = '';
                            console.log('Image uploaded');

                            // Update header avatar if exists
                            if($('#profile-avatar-img').length) $('#profile-avatar-img').attr('src', picUrl);
                            if($('#dropdown-avatar-img').length) $('#dropdown-avatar-img').attr('src', picUrl);
                        } else {
                            showToast('error', res.message || 'Bir hata olu≈ütu');
