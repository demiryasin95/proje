        (function() {
            $.get('@Url.Action("GetProfile","Manage")', function(res){
                if(res && res.success){
                    // Update profile picture if exists
                    if(res.profile.profilePictureUrl){
                        var picUrl = res.profile.profilePictureUrl + '?t=' + new Date().getTime();
                        $('#profile-avatar-img').attr('src', picUrl);
                        $('#dropdown-avatar-img').attr('src', picUrl);
                    }
                    
                    // Update display name if exists
                    if(res.profile.displayName){
                        $('#dropdown-user-name').text(res.profile.displayName);
                    }
                    
                    // Update email if exists
                    if(res.profile.email){
                        $('#dropdown-user-email').text(res.profile.email);
                    }
                }
            });
        })();
