            display: none !important;
            content: none !important;
            text-indent: -9999px !important;
            font-size: 0 !important;
            line-height: 0 !important;
            width: 0 !important;
            height: 0 !important;
        }
        
        /* Ensure only image is shown in dropdown toggle */
        body.admin-layout .admin-top-nav .nav-link.dropdown-toggle {
            gap: 0.5rem !important;
            min-width: auto !important;
            min-height: auto !important;
            overflow: hidden !important;
            text-indent: 0 !important;
            font-size: 0 !important;
        }
        
        /* Hide username span - show only image */
        body.admin-layout .admin-top-nav .nav-link.dropdown-toggle span.d-none.d-md-block,
        body.admin-layout .admin-top-nav .dropdown-toggle > span {
            display: none !important;
            visibility: hidden !important;
        }
        
        /* Force show only the image */
        body.admin-layout .admin-top-nav .nav-link.dropdown-toggle img {
            display: inline-block !important;
            visibility: visible !important;
            opacity: 1 !important;
            width: 32px !important;
            height: 32px !important;
            position: relative !important;
            z-index: 10 !important;
        }
        
        /* Disable transform effects ONLY on buttons - preserve sidebar and other elements */
        .btn, .btn:active, .btn:hover, .btn:focus,
        button, button:active, button:hover, button:focus,
        [class*="btn-"], [class*="btn-"]:active, [class*="btn-"]:hover, [class*="btn-"]:focus,
        input[type="button"], input[type="submit"],
        input[type="button"]:active, input[type="submit"]:active,
        input[type="button"]:hover, input[type="submit"]:hover,
        a.btn, a.btn:active, a.btn:hover,
        .page-link, .page-link:active, .page-link:hover, .page-link:focus,
        .dropdown-item, .dropdown-item:active, .dropdown-item:hover {
            transform: none !important;
            -webkit-transform: none !important;
            transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease, box-shadow 0.2s ease !important;
            -webkit-transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease, box-shadow 0.2s ease !important;
        }
    </style>
    
    <script>
        // AGGRESSIVE: Force disable all transform effects
        (function() {
            function disableTransforms() {
                const elements = document.querySelectorAll('.btn, button, [class*="btn-"], input[type="button"], input[type="submit"], a[href]');
                elements.forEach(function(el) {
                    el.style.setProperty('transform', 'none', 'important');
                    el.style.setProperty('-webkit-transform', 'none', 'important');
                });
            }
            
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', disableTransforms);
            } else {
                disableTransforms();
            }
            
            window.addEventListener('load', disableTransforms);
            setTimeout(disableTransforms, 100);
            setTimeout(disableTransforms, 500);
            
            console.log('Transform effects disabled on all buttons');
        })();
        
        // Remove avatar initials/placeholder text from dropdown
        (function() {
            function removeAvatarText() {
                // Remove any pseudo-element content
                const dropdownToggle = document.querySelector('.admin-top-nav .dropdown-toggle');
                if (dropdownToggle) {
                    dropdownToggle.style.setProperty('--bs-dropdown-toggle-icon', 'none', 'important');
                    // Hide Bootstrap's dropdown arrow
                    const style = document.createElement('style');
                    style.innerHTML = `
                        .admin-top-nav .dropdown-toggle::after {
                            display: none !important;
                            content: none !important;
                        }
                        .admin-top-nav .dropdown-toggle::before {
                            display: none !important;
                            content: none !important;
                        }
                    `;
                    document.head.appendChild(style);
                }
            }
            
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', removeAvatarText);
            } else {
                removeAvatarText();
            }
            
            window.addEventListener('load', removeAvatarText);
            setTimeout(removeAvatarText, 100);
        })();
    </script>
    
