        body.admin-layout .admin-top-nav .nav-link.dropdown-toggle::before,
        body.admin-layout .admin-top-nav .nav-link.dropdown-toggle::after,
        body.admin-layout .navbar .nav-link.dropdown-toggle::before,
        body.admin-layout .navbar .nav-link.dropdown-toggle::after,
